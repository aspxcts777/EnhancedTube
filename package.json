{
  "name": "enhanced-tube",
  "productName": "EnhancedTube",
  "version": "1.2.1",
  "description": "YouTube Desktop Client with Enhanced Features.",
  "keywords": [
    "YouTube",
    "YTDesktopClient"
  ],
  "homepage": "https://github.com/aspxcts777/EnhancedTube#readme",
  "bugs": {
    "url": "https://github.com/aspxcts777/EnhancedTube/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aspxcts777/EnhancedTube.git"
  },
  "license": "MIT",
  "author": "Aspxcts777",
  "type": "commonjs",
  "main": "app.js",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0"
  },
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:mac-intel": "electron-builder --mac --x64",
    "dist:mac-universal": "electron-builder --mac --universal",
    "dist:linux": "electron-builder --linux",
    "dist:all": "electron-builder -mwl",
    "generate-notes": "node scripts/generate-notes.js"
  },
  "build": {
    "appId": "com.aspxcts.enhancedtube",
    "productName": "EnhancedTube",
    "mac": {
      "target": "dmg",
      "icon": "icon.icns",
      "category": "public.app-category.entertainment"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png",
      "category": "AudioVideo",
      "maintainer": "Aspxcts777"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "protocols": [
      {
        "name": "EnhancedTube URL",
        "schemes": [
          "enhancedtube"
        ]
      }
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "EnhancedTube"
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    },
    "releaseInfo": {
      "releaseNotesFile": "release-notes.md"
    }
  }
}